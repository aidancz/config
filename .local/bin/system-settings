#!/bin/sh

if [ -n "$1" ]; then

i="$1"

else

menu="\
set-symbolic-link-with-appearance dark
set-symbolic-link-with-appearance light
set-keyboard
network
volume
"
i="$(printf "%s" "$menu" | dmenu -l 64 -i -p 'system setting')"

fi

case "$i" in
	"set-symbolic-link-with-appearance dark")
		set-symbolic-link-with-appearance dark
		;;
	"set-symbolic-link-with-appearance light")
		set-symbolic-link-with-appearance light
		;;
	"set-keyboard")
		set-keyboard
		;;
	"network")
		setsid -f "$TERMINAL" -e nmtui
		;;
	"volume")
		setsid -f "$TERMINAL" -e pulsemixer
		;;
	*)
		exit 1
		;;
esac
